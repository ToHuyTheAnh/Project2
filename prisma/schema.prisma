generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  User
}

enum UserStatus {
  Active
  Banned
  Deleted
}

enum UserGender {
  Male
  Female
  Other
}

enum UserRelationship {
  Single
  InRelationship
  Married
  Other
}

model User {
  id           String           @id @default(cuid())
  username     String           @unique
  email        String           @unique
  password     String
  status       UserStatus
  role         UserRole
  bio          String?
  displayName  String
  avatar       String?
  hometown     String?
  school       String?
  birthday     DateTime? // Ngày sinh
  gender       UserGender       @default(Male)
  relationship UserRelationship @default(Single)
  address      String? // Địa chỉ
  frameUrl     String?
  bgrUrl       String?

  emailVerified Boolean         @default(false)
  posts         Post[]          @relation("UserPost")
  comments      Comment[]
  chatBoxes     ChatBox[]       @relation("UserChatBox")
  messages      Message[]
  followings    UserFollow[]    @relation("UserFollowing") // Người mình đang theo dõi
  followers     UserFollow[]    @relation("UserFollower") // Người đang theo dõi mình
  sharedPosts   UserSharePost[]
  notifications Notification[]  @relation("UserNotification")
  point         Int             @default(0)

  // timestamps
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Reaction     Reaction[]
  Notification Notification[] @relation("ActorUserRelation")
  UserItem     UserItem[]     @relation("UserItem")
}

enum PostStatus {
  Published
  Deleted
  Banned
  Pending
}

model Post {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation("UserPost", fields: [userId], references: [id])
  trendTopicId String?
  trendTopic   TrendTopic? @relation(fields: [trendTopicId], references: [id])
  title        String
  content      String      @db.Text
  videoUrl     String?
  imageUrl     String?
  status       PostStatus  @default(Published)
  comments     Comment[]

  sharedById UserSharePost[]

  // timestamps
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Reaction  Reaction[]
}

enum CommentStatus {
  Published
  Deleted
}

model Comment {
  id       String        @id @default(cuid())
  userId   String
  user     User          @relation(fields: [userId], references: [id])
  postId   String
  post     Post          @relation(fields: [postId], references: [id])
  content  String
  videoUrl String?
  imageUrl String?
  status   CommentStatus

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatBox {
  id        String    @id @default(cuid())
  users     User[]    @relation("UserChatBox")
  messages  Message[]
  // timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum MessageStatus {
  Seen
  Unseen
}

model Message {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  chatBoxId String
  chatBox   ChatBox       @relation(fields: [chatBoxId], references: [id])
  content   String
  status    MessageStatus

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserFollow {
  id          String @id @default(cuid())
  followerId  String
  followingId String

  follower  User @relation("UserFollower", fields: [followerId], references: [id])
  following User @relation("UserFollowing", fields: [followingId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([followerId, followingId])
}

model TrendTopic {
  id          String  @id @default(cuid())
  posts       Post[]
  title       String
  description String
  note        String
  imageUrl    String?

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSharePost {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  postId String
  post   Post   @relation(fields: [postId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, postId])
}

model Reaction {
  id        String       @id @default(cuid())
  type      ReactionType
  postId    String
  post      Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([userId, postId])
}

enum ReactionType {
  LIKE
  LOVE
  HAHA
  WOW
  SAD
  ANGRY
}

enum NotificationStatus {
  UNREAD
  READ
}

model Notification {
  id        String             @id @default(cuid())
  userId    String
  user      User               @relation("UserNotification", fields: [userId], references: [id])
  actorUser User               @relation("ActorUserRelation", fields: [actor], references: [username])
  status    NotificationStatus @default(UNREAD)
  actor     String
  content   String
  createdAt DateTime           @default(now())
}

enum ItemType {
  FRAME
  IMAGE
  BGR
}

model ShopItem {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  type        ItemType
  imageUrl    String
  discount    Int?     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  UserItem UserItem[] @relation("Item")
}

model UserItem {
  id     String   @id @default(cuid())
  userId String
  user   User     @relation("UserItem", fields: [userId], references: [id])
  itemId String
  item   ShopItem @relation("Item", fields: [itemId], references: [id])
}
